package Sorting_And_Searching;

public class Binary_Search 
{
	static int binary(int arr[],int n)
	{
		int low=0;
		int high=arr.length-1;
		while(low<=high)
		{
			int mid=(low+high)/2;
			if(arr[mid]==n)
			{
				return mid;
			}
			if(n<arr[mid])
				high=mid-1;
			else if(n>arr[mid])
				low=mid+1;
		}
		return -1;
	}
	public static void main(String[] args) 
	{
		int arr[]= {2,4,6,8,10,1,3,5,7,9};
		int n=6;
		binary(arr,n);
	}
	
}
